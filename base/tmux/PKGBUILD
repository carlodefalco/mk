#!/bin/bash

pkgname=tmux
pkgver=3.1c
archive=$pkgname-$pkgver.tar.gz
sum=7cf2736fd9c1cc9daf614679e4084d2746a15390

dstdir=$mkToolchainBase

build() {
  download https://github.com/$pkgname/$pkgname/releases/download/$pkgver/$archive
  check $archive $sum
  extract $archive

  pushd $pkgname-$pkgver
    message "Configuring $pkgname"
    CPPFLAGS="$(pkg-config --cflags-only-I ncurses)" \
    LIBEVENT_CFLAGS="$(pkg-config --cflags libevent)" \
    LIBEVENT_LIBS="$(pkg-config --libs libevent)" \
    ./configure --build=$TARGET --prefix="$dstdir" --disable-silent-rules
    message "Compiling $pkgname"
    make
  popd
}

package() {
  make -C $pkgname-$pkgver install
}
