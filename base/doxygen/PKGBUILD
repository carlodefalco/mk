#!/bin/bash

pkgname=doxygen
pkgver=1.8.17
archive=$pkgname-$pkgver.src.tar.gz
sum=041c6b860853a2259af3fcb8c628a645d99d4de4

dstdir=$mkToolchainBase

build() {
  download http://doxygen.nl/files/$archive
  check $archive $sum
  extract $archive

  mkdir build
  pushd build
    message "Compiling $pkgname"
    cmake -DCMAKE_INSTALL_PREFIX="$dstdir" \
	  -DICONV_DIR=$mkToolchainPrefix \
	  -DCMAKE_EXE_LINKER_FLAGS="-liconv" ../$pkgname-$pkgver
    make
  popd
}

package() {
  make -C $pkgname-$pkgver install
}
