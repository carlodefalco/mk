#!/bin/bash

pkgname=libevent
pkgver=2.1.12
archive=$pkgname-$pkgver-stable.tar.gz
sum=b5333f021f880fe76490d8a799cd79f4

dstdir=$mkToolchainBase

build() {
  download https://github.com/$pkgname/$pkgname/releases/download/release-$pkgver-stable/$archive
  check $archive $sum
  extract $archive

  pushd $pkgname-$pkgver-stable
    message "Configuring $pkgname"
    ./configure --build=$TARGET --prefix="$dstdir" --disable-static
    message "Compiling $pkgname"
    make
  popd
}

package() {
  make -C $pkgname-$pkgver-stable install
}
