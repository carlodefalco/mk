#!/bin/bash

pkgname=sqlite
pkgver=3340000
archive=$pkgname-autoconf-$pkgver.tar.gz
sum=1544957cf4bcc9606aef541054b1cb59480a4b4e

dstdir=$mkToolchainBase

build() {
  download https://www.sqlite.org/2020/$archive
  check $archive $sum
  extract $archive

  pushd $pkgname-autoconf-$pkgver
    message "Configuring $pkgname"
    ./configure --build=$TARGET --prefix="$dstdir" --disable-static
    message "Compiling $pkgname"
    make
  popd
}

package() {
  make -C $pkgname-autoconf-$pkgver install
}
