#!/bin/bash

pkgname=libffi
pkgver=3.3
archive=v$pkgver.tar.gz
sum=f25aefb928eed09e858878382e10641f

dstdir=$mkToolchainBase

build() {
  download https://github.com/libffi/libffi/archive/$archive
  check $archive $sum
  extract $archive

  pushd $pkgname-$pkgver
    ./autogen.sh
    # install the header files in the proper position
    sed -e '/^includesdir/ s/$(libdir).*$/$(includedir)/' \
        -i include/Makefile.in
    sed -e '/^includedir/ s/=.*$/=@includedir@/' \
        -i libffi.pc.in
    message "Configuring $pkgname"
    ./configure --build=$TARGET --prefix="$dstdir" --disable-static
    message "Compiling $pkgname"
    make
  popd
}

package() {
  make -C $pkgname-$pkgver install
}
