#!/bin/bash

pkgname=expat
pkgver=2.2.9
archive=R_2_2_9.tar.gz
sum=3842a6da0725ae5ef5a15af144cb156c402d9764
dstdir=$mkToolchainBase

build() {
  download https://github.com/libexpat/libexpat/archive/$archive
  check $archive $sum
  extract $archive

  pushd $pkgname-$pkgver
    message "Configuring $pkgname"
    ./configure --build=$TARGET --prefix="$dstdir" --disable-static
    message "Compiling $pkgname"
    make
  popd
}

package() {
  make -C $pkgname-$pkgver install
}
