#!/bin/bash

pkgname=expat
pkgver=2.2.9
archive=$pkgname-$pkgver.tar.gz
sum=3739fa85b056150fa2b2d57ad290d5cb39c97053
dstdir=$mkToolchainBase

build() {
  download https://github.com/libexpat/libexpat/releases/download/R_2_2_9/$archive
  check $archive $sum
  extract $archive

  pushd $pkgname-$pkgver
    message "Configuring $pkgname"
    ./configure --build=$TARGET --prefix="$dstdir" --disable-static
    message "Compiling $pkgname"
    make
  popd
}

package() {
  make -C $pkgname-$pkgver install
}
