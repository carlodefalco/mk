#!/bin/bash

pkgname=graphviz
pkgver=2.40.1
archive=$pkgname.tar.gz
sum=8a44d19bcdb50df1bd8e649de472ebf868468888

dstdir=$mkToolchainBase

build() {
    
  download https://graphviz.gitlab.io/pub/graphviz/stable/SOURCES/$archive
  check $archive $sum
  extract $archive

  pushd $pkgname-$pkgver
    message "Compiling $pkgname"
    ./configure --prefix="$dstdir"
    make
  popd
}

package() {
  make -C $pkgname-$pkgver install
}
